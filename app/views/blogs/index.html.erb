<p class="text-center">
<%= image_tag 'instag.png' %>
</p>
<div class="center-block">
<div><h1>ブログ一覧</h1></div>

<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>投稿者</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.user.name %></td>
          <td><%= link_to '確認する', blog_path(blog.id), class: 'btn btn-default'  %></td>
        <% if logged_in? %>

          <% if blog.user_id == current_user.id %>
            <td><%= link_to "編集する", edit_blog_path(blog.id), class: 'btn btn-default' %></td>
            <td><%= link_to '削除する', blog_path(blog.id), class: 'btn btn-default', method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
          <% end %>
        <% end %>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくブログを投稿する', new_blog_path, class: 'btn btn-default' %>
</div>
