<div class="container">
  <%= image_tag 'insta.jpeg' %>
<h1>Sign up</h1>
<% if @user.errors.any? %>
 <div id="error_explanation">
   <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
   <ul>
   <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
   </ul>
 </div>
<% end %>

  <div class="row">
  <%= form_with(model: @user, local: true) do |f| %>
  <div class="col-sm-12 signup">
    <div class="flex_container">
      <div class="signup_image">
        <!-- <img src="images.png"> -->
      <%= image_tag 'images.png' %>
      <div/>

    <ul class="signup_ul">
       <li><%= f.label :name %>
       <%= f.text_field :name %></li>
       <li><%= f.label :email %>
       <%= f.email_field :email %></li>
       <li><%= f.label :photo %>
       <%= f.file_field :icon %>
       <%= f.hidden_field :icon_cache %></li>
       <li><%= f.label :password %>
       <%= f.password_field :password %></li>
       <li><%= f.label :password_confirmation %>
       <%= f.password_field :password_confirmation %></li>
       <li><%= f.submit "Create my account" %></li>
    </ul>
    <div/>
  <div/>
<% end %>
<div/>
<div/>
